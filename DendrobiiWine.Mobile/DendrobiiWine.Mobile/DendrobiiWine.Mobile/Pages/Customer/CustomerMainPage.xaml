<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DendrobiiWine.Mobile.Pages.Customer.CustomerMainPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="无锡" Clicked="OnCityClick"></ToolbarItem>
    <ToolbarItem Icon="barcode.png" Clicked="OnBarCodeClick"></ToolbarItem>
    <ToolbarItem Icon="search.png" Clicked="OnSearchClick"></ToolbarItem>
    <ToolbarItem Icon="user.png" Clicked="OnProfileClick"></ToolbarItem>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <ListView  x:Name="listView" RowHeight="70">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" Padding="5" BackgroundColor="White">
              <Image Source="{Binding Image}" WidthRequest="100" Aspect="AspectFill" />
              <StackLayout Orientation="Vertical">
                <Label Text="{Binding Name}" />
                <Label Text="{Binding Description}" FontSize="10" TextColor="#999999" />
                <Label Text="{Binding Price}" TextColor="#f35e20" />
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
</ContentPage>